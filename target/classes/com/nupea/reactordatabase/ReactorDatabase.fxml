<StackPane fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nupea.reactordatabase.ReactorDatabaseController">
   <children>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="495.0" prefWidth="869.0">
         <center>
            <SplitPane dividerPositions="0.1760426770126091" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
               <items>
                  <ListView fx:id="categoryList" prefHeight="200.0" prefWidth="200.0" SplitPane.resizableWithParent="false" />
                  <StackPane fx:id="sheetPane" prefHeight="150.0" prefWidth="200.0" />
               </items>
            </SplitPane>
         </center>
         <top>
            <VBox fx:id="selectionBox" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="2.0" prefWidth="870.0" spacing="3.0">
                     <children>
                        <CheckComboBox fx:id="sizeComboBox" prefHeight="26.0" prefWidth="78.0" title="Size" />
                        <Button fx:id="clearSizeButton" disable="true" mnemonicParsing="false" onAction="#clearSizeChecks">
                           <graphic>
                              <FontIcon iconLiteral="mdal-clear_all" iconSize="18" />
                           </graphic>
                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="26.0" prefWidth="20.0" />
                        <CheckComboBox fx:id="coreSizeComboBox" prefHeight="26.0" prefWidth="97.0" title="Core Size" />
                        <Button fx:id="clearCoreSizeButton" disable="true" mnemonicParsing="false" onAction="#clearCoreSizeChecks">
                           <graphic>
                              <FontIcon iconLiteral="mdal-clear_all" iconSize="18" />
                           </graphic>
                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="26.0" prefWidth="23.0" />
                        <CheckComboBox fx:id="typeComboBox" prefHeight="26.0" prefWidth="78.0" title="Type" />
                        <Button fx:id="clearTypeButton" disable="true" mnemonicParsing="false" onAction="#clearTypeChecks">
                           <graphic>
                              <FontIcon iconLiteral="mdal-clear_all" iconSize="18" />
                           </graphic>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="2.0" left="2.0" top="2.0" />
                     </padding>
                  </HBox>
                  <BreadCrumbBar fx:id="breadCrumbBar" minWidth="0.0" prefHeight="25.0" prefWidth="870.0" />
               </children>
               <padding>
                  <Insets bottom="2.0" />
               </padding>
            </VBox>
         </top>
         <left>
            <VBox prefHeight="442.0" prefWidth="36.0" spacing="3.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" prefHeight="32.0" prefWidth="42.0">
                     <graphic>
                        <FontIcon iconLiteral="far-folder-open" iconSize="18" text="" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Open File" />
                     </tooltip>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="32.0" prefWidth="42.0">
                     <graphic>
                        <FontIcon iconLiteral="far-save" iconSize="18" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Save File" />
                     </tooltip>
                  </Button>
                  <Separator prefHeight="0.0" prefWidth="37.0" />
                  <Button mnemonicParsing="false" onAction="#launchReactorDataEditor" prefHeight="32.0" prefWidth="42.0">
                     <graphic>
                        <FontIcon iconLiteral="fas-plus" iconSize="18" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Save File" />
                     </tooltip>
                  </Button>
                  <Separator prefHeight="0.0" prefWidth="37.0" />
                  <Button disable="true" mnemonicParsing="false" prefHeight="32.0" prefWidth="102.0">
                     <graphic>
                        <FontIcon iconLiteral="far-file-excel" iconSize="18" />
                     </graphic>
                  </Button>
                  <Separator prefHeight="0.0" prefWidth="37.0" />
                  <Button disable="true" mnemonicParsing="false" prefHeight="32.0" prefWidth="102.0">
                     <graphic>
                        <FontIcon iconLiteral="fab-cloudversify" iconSize="18" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets left="2.0" right="2.0" />
               </padding>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </left>
         <bottom>
            <HBox prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label maxWidth="1.7976931348623157E308" prefHeight="23.0" prefWidth="391.0" text="Output:" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets left="2.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
